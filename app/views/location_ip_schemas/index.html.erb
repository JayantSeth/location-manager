<h1 class="text-center text-white mt-4">Locations IP Schema</h1>
<div class="container mt-4">
  <table class="table table-striped table-secondary index-page">
    <thead class="text-center text-white">
      <tr>
        <th scope="col">Location Network</th>
        <th scope="col">Location Subnet</th>
        <th scope="col">Location</th>
        <th scope="col">Location Type</th>
        <th scope="col">Comment</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @location_ip_schemas.each do |location_ip_schema| %>
        <tr class="text-center">
          <td><%= location_ip_schema.network %></td>
          <td><%= location_ip_schema.subnet %></td>
          <td><%= location_ip_schema.location.location_name %></td>
          <td><%= location_ip_schema.location.location_type.location_type %></td>
          <td><%= location_ip_schema.comment %></td>
          <td><%= link_to "View", location_ip_schema_path(id: location_ip_schema.id), class: "btn btn-outline-success" %></td>
          <td><%= link_to "Edit", edit_location_ip_schema_path(id: location_ip_schema.id), class: "btn btn-outline-info" %></td>
          <td><%= link_to "Delete", location_ip_schema_path(id: location_ip_schema.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>