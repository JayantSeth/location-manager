<h1 class="text-center text-white mt-4">Location</h1>
<div class="container mt-4">
  <table class="table table-striped table-secondary index-page">
    <thead class="text-center text-white">
      <tr>
        <th scope="col">Location Name</th>
        <th scope="col">Location Type</th>
        <th scope="col">Location Address</th>
        <th scope="col">Comment</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr class="text-center">
          <td><%= location.location_name %></td>
          <td><%= location.location_type.location_type %></td>
          <td><%= location.location_address %></td>
          <td><%= location.comment %></td>
          <td><%= link_to "View", location_path(id: location.id), class: "btn btn-outline-success" %></td>
          <td><%= link_to "Edit", edit_location_path(id: location.id), class: "btn btn-outline-info" %></td>
          <td><%= link_to "Delete", location_path(id: location.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>